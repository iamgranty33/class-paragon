				<tr><td>15th</td><td>5</td><td> 8</td><td>4</td><td>3</td><td>—</td><td>—</td></tr>
				<tr><td>13th</td><td>5</td><td> 9</td><td>4</td><td>3</td><td>2</td><td>—</td></tr>
				<tr><td>14th</td><td>5</td><td>10</td><td>4</td><td>3</td><td>2</td><td>—</td></tr>
				<tr><td>15th</td><td>5</td><td>10</td><td>4</td><td>3</td><td>2</td><td>—</td></tr>
				<tr><td>16th</td><td>5</td><td>11</td><td>4</td><td>3</td><td>3</td><td>—</td></tr>
				<tr><td>17th</td><td>5</td><td>11</td><td>4</td><td>3</td><td>3</td><td>—</td></tr>
