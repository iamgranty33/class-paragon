			<select type="Spell" name="Spellcasting (Virtue of Passion)" supports="$(spellcasting:list), $(spellcasting:slots)" level="7" spellcasting="Virtue of Passion"/>
			<select type="Spell" name="Spellcasting (Virtue of Passion)" supports="(Wizard||$(spellcasting:list)), $(spellcasting:slots)" level="8" spellcasting="Virtue of Passion"/>
			<select type="Spell" name="Spellcasting (Virtue of Passion)" supports="$(spellcasting:list), $(spellcasting:slots)" level="10" spellcasting="Virtue of Passion"/>
